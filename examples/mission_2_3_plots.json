{
    "description": "Plotting configuration for Mission 2.3",
    "figure": {
        "title": "Mission 2.3: Joint Dispatch Results",
        "figsize": [12, 8]
    },
    "subplots": [
        {
            "title": "Reservoir Water Level",
            "y_label": "Water Level (m)",
            "grid": true,
            "series": [
                { "y_key": "upper_reservoir_water_level", "label": "Reservoir Level" }
            ],
            "annotations": [
                { "type": "hline", "y": 22.0, "label": "Flood Threshold (22m)", "color": "r", "linestyle": "--" },
                { "type": "hline", "y": 25.0, "label": "Dam Safety Limit (25m)", "color": "k", "linestyle": ":" }
            ]
        },
        {
            "title": "Component Outflows",
            "y_label": "Flow (m3/s)",
            "x_label": "Time (hours)",
            "grid": true,
            "series": [
                { "y_key": "station_turbine_outflow", "label": "Turbine Outflow" },
                { "y_key": "station_flood_gate_outflow", "label": "Flood Gate Outflow" }
            ]
        }
    ]
}
