{
  "simulation": {
    "duration": 200,
    "dt": 1.0
  },
  "components": {
    "source_reservoir": {
      "initial_state": { "volume": 50000, "water_level": 5.0 },
      "params": { "surface_area": 10000 }
    },
    "dest_reservoir": {
      "initial_state": { "volume": 25000, "water_level": 5.0 },
      "params": { "surface_area": 5000 }
    },
    "pump": {
      "initial_state": { "status": 0, "outflow": 0 },
      "params": { "max_flow_rate": 5, "max_head": 20, "power_consumption_kw": 75 },
      "action_topic": "action.pump1.status"
    },
    "pipe": {
      "initial_state": { "outflow": 0 },
      "params": { "length": 100, "diameter": 0.5, "friction_factor": 0.02 }
    },
    "valve": {
      "initial_state": { "opening": 0 },
      "params": { "diameter": 0.5, "discharge_coefficient": 0.9 },
      "action_topic": "action.valve1.opening"
    }
  },
  "control_events": [
    { "time": 5, "topic": "action.pump1.status", "control_signal": 1, "message": "命令: 开启水泵。" },
    { "time": 10, "topic": "action.valve1.opening", "control_signal": 0.5, "message": "命令: 开启阀门至50%。" },
    { "time": 100, "topic": "action.valve1.opening", "control_signal": 1.0, "message": "命令: 开启阀门至100%。" },
    { "time": 180, "topic": "action.pump1.status", "control_signal": 0, "message": "命令: 关闭水泵并关闭阀门。" },
    { "time": 180, "topic": "action.valve1.opening", "control_signal": 0 }
  ]
}
