{
  "metadata": {
    "name": "Hydropower Generation Example",
    "description": "A simple hydropower generation scenario involving a lake, a water turbine, and a canal.",
    "version": "1.0"
  },
  "simulation_settings": {
    "dt": 3600,
    "duration": 259200
  },
  "components": [
    {
      "id": "upper_lake",
      "type": "Lake",
      "initial_state": {
        "volume": 40000000,
        "water_level": 20.0
      },
      "params": {
        "surface_area": 2000000,
        "max_volume": 50000000,
        "evaporation_rate_m_per_s": 2.31e-8
      }
    },
    {
      "id": "turbine_1",
      "type": "WaterTurbine",
      "initial_state": { "power": 0, "outflow": 0 },
      "params": {
        "efficiency": 0.85,
        "max_flow_rate": 150
      }
    },
    {
      "id": "tailrace_canal",
      "type": "Canal",
      "initial_state": { "volume": 100000, "water_level": 2.1 },
      "params": {
        "bottom_width": 20,
        "length": 5000,
        "slope": 0.0002,
        "side_slope_z": 2,
        "manning_n": 0.025
      }
    }
  ],
  "connections": [
    { "from": "upper_lake", "to": "turbine_1" },
    { "from": "turbine_1", "to": "tailrace_canal" }
  ]
}
