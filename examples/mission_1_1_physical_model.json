{
    "description": "Mission 1.1: Physical Model Demonstration. Simulates the interaction between a canal and a gate with a step change in inflow.",
    "simulation_settings": {
        "dt": 10.0,
        "duration": 1000
    },
    "components": [
        {
            "name": "upstream_canal",
            "type": "Canal",
            "parameters": {
                "bottom_width": 20.0,
                "length": 1000.0,
                "slope": 0.001,
                "side_slope_z": 2.0,
                "manning_n": 0.025
            },
            "initial_state": {
                "volume": 50000,
                "water_level": 2.0,
                "outflow": 0
            }
        },
        {
            "name": "control_gate",
            "type": "Gate",
            "parameters": {
                "discharge_coefficient": 0.8,
                "width": 10.0,
                "max_opening": 3.0,
                "max_rate_of_change": 0.1
            },
            "initial_state": {
                "opening": 0.2,
                "outflow": 0
            }
        }
    ],
    "scenario": {
        "initial_inflow": 10.0,
        "events": [
            {
                "time": 500,
                "type": "inflow_change",
                "value": 20.0
            }
        ]
    },
    "output_settings": {
        "history_file": "output/mission_1_1_results.csv"
    }
}
