{
    "description": "Mission 1.4: Digital Twin Agent. Demonstrates the cognitive function of a DigitalTwinAgent by smoothing noisy data.",
    "simulation_settings": {
        "dt": 1.0,
        "duration": 30
    },
    "topics": {
        "smoothed_state_topic": "state/canal/level/smoothed"
    },
    "components": [
        {
            "name": "upstream_canal",
            "type": "Canal",
            "parameters": { "bottom_width": 20.0, "length": 1000.0, "slope": 0.001, "side_slope_z": 2.0, "manning_n": 0.025 },
            "initial_state": { "water_level": 10.0 }
        }
    ],
    "agents": [
        {
            "name": "twin_agent_1",
            "type": "DigitalTwinAgent",
            "simulated_object": "upstream_canal",
            "state_topic": "smoothed_state_topic",
            "smoothing_config": {
                "water_level": 0.3
            }
        }
    ],
    "scenario": {
        "type": "noisy_injection",
        "component": "upstream_canal",
        "state_key": "water_level",
        "true_value": 10.0,
        "noise_std": 0.5
    },
    "verification": {
        "type": "variance_reduction",
        "raw_data_key": "scenario_raw_value",
        "processed_data_key": "twin_agent_1_published_water_level"
    }
}
